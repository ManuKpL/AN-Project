<div class="container">
  <div class="row padded">
    <div class="home-list">
      <% ('A'..'Z').to_a.each do |letter| %>
        <%= link_to letter, deputies_path(search: letter), class: "home-list-item btn btn-primary#{check_status(letter)}" %>
      <% end %>
    </div>
    <div class="home-list">
      <%= link_to root_path, class: 'home-list-group btn btn-primary' do %>
        <i class="fa fa-home"></i>
      <% end %>
      <% @groups.each do |group| %>
        <%= link_to group.sigle, deputies_path(search: group.sigle), class: "home-list-group btn btn-primary#{check_status(group.sigle)}" %>
      <% end %>
    </div>
  </div>
  <div class="deputies-list">
    <% @deputies.each do |deputy| %>
      <%= link_to deputy_path(deputy.id), class: 'list-card' do %>
        <%= image_tag "http://www2.assemblee-nationale.fr/static/tribun/14/photos/#{deputy.original_tag[2..-1]}.jpg", class: 'list-card-picture' %>
        <p class="list-card-name">
          <%= "#{deputy.civ} #{deputy.firstname} #{deputy.lastname}" %>
        </p>
        <p class="list-card-sigle">
          <%= deputy.group.sigle %>
        </p>
      <% end %>
    <% end %>
  </div>
  <% deputy = @deputies.first %>
</div>



