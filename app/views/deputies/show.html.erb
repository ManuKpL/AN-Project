<!-- bootstrap version -->
<div class="container padded">
  <div class="row">
    <!-- id -->
    <div class="col-xs-12 col-sm-4 my-col">
      <div class="profile-element">
        <div class="profile-card cover-position">

          <%= link_to '#', class: 'profile-card-element bg-dark-blue' do %>
            <h3>
              <%= @deputy.lastname[0] %>
            </h3>
          <% end %>
          <div class="profile-picture-filling-bg">
            <div class="profile-picture cover-position" style='background-image: url(<%= "http://www2.assemblee-nationale.fr/static/tribun/14/photos/#{@deputy.original_tag[2..-1]}.jpg" %>)'></div>
          </div>
          <div class="profile-card-element profile-card-element-wdouble bg-black">
            <p>
              <%= "#{@deputy.civ} #{@deputy.firstname} #{@deputy.lastname}" %>
            </p>
          </div>

        </div>
      </div>
    </div>
    <!-- id -->

    <!-- nav -->
    <div class="col-xs-12 col-sm-4 my-col">
      <div class="profile-element">
        <div class="profile-card cover-position" id='nav'>

          <%= link_to root_path, class: 'profile-card-element profile-card-element-hdouble bg-blue' do %>
            <h3>
              <i class="fa fa-home"></i>
            </h3>
          <% end %>
          <%= link_to deputy_path(@previous_id), class: 'profile-card-element bg-grey' do %>
            <h3>
              <i class="fa fa-arrow-left"></i>
            </h3>
          <% end %>
          <%= link_to deputy_path(@next_id), class: 'profile-card-element bg-grey' do %>
            <h3>
              <i class="fa fa-arrow-right"></i>
            </h3>
          <% end %>

        </div>
      </div>
    </div>
    <!-- nav -->

    <!-- info -->
    <div class="col-xs-12 col-sm-4 my-col">
      <div class="profile-element">
        <div class="profile-card cover-position">

          <%= link_to '#', class: 'profile-card-element profile-card-element-wdouble bg-dark-blue' do %>
            <h3>
              LR
            </h3>
          <% end %>
          <% if @deputy.screen_name.nil? %>
            <div class="profile-card-element bg-blue">
              <h3>
                ?
              </h3>
            </div>
          <% else %>
            <%= link_to "https://twitter.com/#{@deputy.screen_name}", target: '_blank', class: 'profile-card-element bg-blue' do %>
              <h3>
                <i class="fa fa-twitter"></i>
              </h3>
            <% end %>
          <% end %>
          <%= link_to "http://www2.assemblee-nationale.fr/deputes/fiche/OMC_#{@deputy.original_tag}", target: '_blank', class: "profile-card-element bg-black" do %>
            <h3>
              <i class="fa fa-university"></i>
            </h3>
          <% end %>

        </div>
      </div>
    </div>
    <!-- info -->

  </div>
</div>
<!-- bootstrap version -->

<div class="container">
  <div class="navigation margin-top hidden-xs">
    <%= link_to deputy_path(@previous_id), class: 'btn navigation-btn' do %>
      <i class="fa fa-arrow-left"></i>
      <%= "#{@previous_id.civ} #{@previous_id.firstname} #{@previous_id.lastname}" %>
    <% end %>
    <%= link_to root_path, class: 'btn navigation-btn navigation-btn-lg' do %>
      <i class="fa fa-university"></i>
    <% end %>
    <%= link_to deputy_path(@next_id), class: 'btn navigation-btn' do %>
      <%= "#{@next_id.civ} #{@next_id.firstname} #{@next_id.lastname}" %>
      <i class="fa fa-arrow-right"></i>
    <% end %>
  </div>
  <div class="profile-page">
    <%= image_tag "http://www2.assemblee-nationale.fr/static/tribun/14/photos/#{@deputy.original_tag[2..-1]}.jpg" %>
    <h1>
      <%= "#{@deputy.civ} #{@deputy.firstname} #{@deputy.lastname}" %>
    </h1>
    <p>
      <% if @deputy.screen_name.nil? %>
        No Twitter account
      <% else %>
        <%= link_to "@#{@deputy.screen_name}", "https://twitter.com/#{@deputy.screen_name}", target: "_blank" %>
      <% end %>
    </p>
    <p>
      Born on <%= @deputy.birthday.strftime('%B %d, %Y') %> in the department of <%= @deputy.birthdep %>
    </p>
    <p>
      Job: <%= @deputy.job.label %> (<%= @deputy.job.category %> | <%= @deputy.job.family %>)
    </p>
    <h3>Addresses</h3>
    <% @deputy.addresses.order(:label).each do |address| %>
      <% if address.label == 'NR' %>
        <h4>
          No associated address
        </h4>
      <% else %>
        <h4>
          <%= address.label %>: <%= address.description %>
        </h4>
        <p>
          <%= address.value %>
        </p>
        <% unless address.more_info.nil? %>
          <p>
            <%= address.more_info %>
          </p>
        <% end %>
        <p>
          <%= address.postcode %> <%= address.city %>
        </p>
      <% end %>
      <% unless address.phones.empty? %>
        <% address.phones.each do |e| %>
          <p>
            <%= e.label%>: <%= e.value %>
          </p>
        <% end %>
      <% end %>
    <% end %>
    <h3>E Coordinates</h3>
    <% unless @deputy.e_addresses.empty? %>
      <% @deputy.e_addresses.order(:label).each do |e| %>
        <p>
          <%= e.label %>: <%= e.value %>
        </p>
      <% end %>
    <% end %>
  </div>
</div>
