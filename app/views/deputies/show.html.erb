<div class="container">
  <!-- flexbox version -->
  <div class="profile-card">
    <div class="profile-card-initial-ldouble profile-card-initial-ldouble-container">
      <div class="profile-card-initial bg-dark-blue">
        <%= @deputy.lastname[0] %>
      </div>
      <div class="profile-picture" style='background-image: url(<%= "http://www2.assemblee-nationale.fr/static/tribun/14/photos/#{@deputy.original_tag[2..-1]}.jpg" %>)'>
      </div>
    </div>
    <%= link_to deputy_path(@previous_id), class: 'profile-card-initial profile-card-initial-ldouble bg-black' do %>
      <i class="fa fa-arrow-left"></i>
      <%= "#{@previous_id.civ} #{@previous_id.firstname} #{@previous_id.lastname}" %>
    <% end %>
    <%= link_to root_path, class: 'profile-card-initial profile-card-initial-hdouble bg-blue' do %>
      <i class="fa fa-university"></i>
    <% end %>
    <%= link_to deputy_path(@next_id), class: 'profile-card-initial profile-card-initial-ldouble bg-black' do %>
      <%= "#{@next_id.civ} #{@next_id.firstname} #{@next_id.lastname}" %>
      <i class="fa fa-arrow-right"></i>
    <% end %>
    <% if @deputy.screen_name.nil? %>
      <div class="profile-card-initial profile-card-initial-ldouble bg-black">
        ?
      </div>
    <% else %>
      <%= link_to "https://twitter.com/#{@deputy.screen_name}", target: '_blank', class: 'profile-card-initial profile-card-initial-ldouble bg-grey' do %>
        <%= "@#{@deputy.screen_name}" %>
      <% end %>
    <% end %>
  </div>
  <div class="navigation margin-top">
    <%= link_to deputy_path(@previous_id), class: 'btn navigation-btn' do %>
      <i class="fa fa-arrow-left"></i>
      <%= "#{@previous_id.civ} #{@previous_id.firstname} #{@previous_id.lastname}" %>
    <% end %>
    <%= link_to root_path, class: 'btn navigation-btn navigation-btn-lg' do %>
      <i class="fa fa-university"></i>
    <% end %>
    <%= link_to deputy_path(@next_id), class: 'btn navigation-btn' do %>
      <%= "#{@next_id.civ} #{@next_id.firstname} #{@next_id.lastname}" %>
      <i class="fa fa-arrow-right"></i>
    <% end %>
  </div>
  <div class="profile">
    <%= image_tag "http://www2.assemblee-nationale.fr/static/tribun/14/photos/#{@deputy.original_tag[2..-1]}.jpg" %>
    <h1>
      <%= "#{@deputy.civ} #{@deputy.firstname} #{@deputy.lastname}" %>
    </h1>
    <p>
      <% if @deputy.screen_name.nil? %>
        No Twitter account
      <% else %>
        <%= link_to "@#{@deputy.screen_name}", "https://twitter.com/#{@deputy.screen_name}", target: "_blank" %>
      <% end %>
    </p>
    <p>
      Born on <%= @deputy.birthday.strftime('%B %d, %Y') %> in the department of <%= @deputy.birthdep %>
    </p>
    <p>
      Job: <%= @deputy.job.label %> (<%= @deputy.job.category %> | <%= @deputy.job.family %>)
    </p>
    <h3>Addresses</h3>
    <% @deputy.addresses.order(:label).each do |address| %>
      <% if address.label == 'NR' %>
        <h4>
          No associated address
        </h4>
      <% else %>
        <h4>
          <%= address.label %>: <%= address.description %>
        </h4>
        <p>
          <%= address.value %>
        </p>
        <% unless address.more_info.nil? %>
          <p>
            <%= address.more_info %>
          </p>
        <% end %>
        <p>
          <%= address.postcode %> <%= address.city %>
        </p>
      <% end %>
      <% unless address.phones.empty? %>
        <% address.phones.each do |e| %>
          <p>
            <%= e.label%>: <%= e.value %>
          </p>
        <% end %>
      <% end %>
    <% end %>
    <h3>E Coordinates</h3>
    <% unless @deputy.e_addresses.empty? %>
      <% @deputy.e_addresses.order(:label).each do |e| %>
        <p>
          <%= e.label %>: <%= e.value %>
        </p>
      <% end %>
    <% end %>
  </div>
</div>
