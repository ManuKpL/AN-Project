<div class="container">
  <div class="navigation padded">
    <%= link_to t('.previous', default: 'Previous'), deputy_path(@previous_id), class: 'btn btn-primary' %>
    <%= link_to t('.home', default: 'Home'), root_path, class: 'btn btn-success' %>
    <%= link_to t('.next', default: 'Next'), deputy_path(@next_id), class: 'btn btn-primary' %>
  </div>
  <div class="profile">
    <h1>
      <%= "#{@deputy.civ} #{@deputy.firstname} #{@deputy.lastname}" %>
    </h1>
    <p>
      Born on <%= @deputy.birthday.strftime('%B %d, %Y') %> in the department of <%= @deputy.birthdep %>
    </p>
    <p>
      Job: <%= @deputy.job.label %> (<%= @deputy.job.category %> | <%= @deputy.job.family %>)
    </p>
    <h3>Addresses</h3>
    <% @deputy.addresses.order(:label).each do |address| %>
      <% if address.label == 'NR' %>
        <h4>
          No associated address
        </h4>
      <% else %>
        <h4>
          <%= address.label %>: <%= address.description %>
        </h4>
        <p>
          <%= address.value %>
        </p>
        <% unless address.more_info.nil? %>
          <p>
            <%= address.more_info %>
          </p>
        <% end %>
        <p>
          <%= address.postcode %> <%= address.city %>
        </p>
      <% end %>
      <% unless address.phones.empty? %>
        <% address.phones.each do |e| %>
          <p>
            <%= e.label%>: <%= e.value %>
          </p>
        <% end %>
      <% end %>
    <% end %>
    <h3>E Coordinates</h3>
    <% unless @deputy.e_addresses.empty? %>
      <% @deputy.e_addresses.order(:label).each do |e| %>
        <p>
          <%= e.label %>: <%= e.value %>
        </p>
      <% end %>
    <% end %>
  </div>
</div>
