<div class="tartan-card cover-position tartan-card-column-direction">

  <!-- square top left -->
  <%= link_to @deputy.mandates.last.hatvp_page, class: 'tartan-element bg-red', target: '_blank' do %>
    <h3>
      <i class="fa fa-file-text-o"></i>
    </h3>
  <% end %>
  <!-- square top left -->

  <!-- square bottom left -->
  <% if @deputy.screen_name.length == 0 %>
    <div class="tartan-element">
      <h3>
        <i class="fa fa-twitter"></i>
      </h3>
    </div>
  <% else %>
    <%= link_to "https://twitter.com/#{@deputy.screen_name}", target: '_blank', class: 'tartan-element bg-light-blue' do %>
      <h3>
        <i class="fa fa-twitter"></i>
      </h3>
    <% end %>
  <% end %>
  <!-- square bottom left -->

  <!-- rectangle right (hdouble) -->
  <%= link_to "http://www2.assemblee-nationale.fr/deputes/fiche/OMC_#{@deputy.original_tag}", target: '_blank', class: "tartan-element tartan-element-hdouble bg-dark-blue" do %>
    <h3>
      <i class="fa fa-university"></i>
    </h3>
  <% end %>
  <!-- rectangle right (hdouble) -->

</div>
