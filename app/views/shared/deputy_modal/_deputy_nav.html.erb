<div class="profile-element">
  <div class="profile-card cover-position">

    <%= link_to deputy_path(@deputy), class: 'profile-card-element profile-card-element-wdouble bg-blue' do %>
      <p>
        <%= "#{@deputy.civ} #{@deputy.firstname} #{@deputy.lastname}" %>
      </p>
    <% end %>

    <% if params[:action] == 'index' %>
      <div class="profile-card-element profile-card-element-nav bg-gray"data-dismiss="modal" data-toggle="modal" data-target="#deputy_modal_<%= @previous_id.id %>" data-deputy=<%= @previous_id.id %>>
        <h3>
          <i class="fa fa-arrow-left"></i>
        </h3>
      </div>
      <div class="profile-card-element profile-card-element-nav bg-gray" data-dismiss="modal" data-toggle="modal" data-target="#deputy_modal_<%= @next_id.id %>" data-deputy=<%= @next_id.id %>>
        <h3>
          <i class="fa fa-arrow-right"></i>
        </h3>
      </div>
    <% else %>
      <%= link_to deputy_path(@previous_id), class: 'profile-card-element bg-gray' do %>
        <h3>
          <i class="fa fa-arrow-left"></i>
        </h3>
      <% end %>
      <%= link_to deputy_path(@next_id), class: 'profile-card-element bg-gray' do %>
        <h3>
          <i class="fa fa-arrow-right"></i>
        </h3>
      <% end %>
    <% end %>

  </div>
</div>
