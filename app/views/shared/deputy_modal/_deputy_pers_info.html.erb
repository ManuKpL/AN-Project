<div class="tartan-card cover-position">

  <!-- rectangle top (wdouble) -->
  <%= link_to deputies_path(search: { pro: @deputy.job.category }), class: 'tartan-element tartan-element-wdouble bg-blue' do %>
    <p>
      <%= @deputy.job.label %>
    </p>
  <% end %>
  <!-- rectangle top (wdouble) -->

  <!-- square bottom left -->
  <%= link_to deputies_path(search: { age: find_age(@deputy)} ), class: 'tartan-element bg-dark-blue' do %>
    <h3>
      <%= find_age(@deputy) %>
    </h3>
    <p>
      ans
    </p>
  <% end %>
  <!-- square bottom left -->

  <!-- square bottom right -->
  <% if find_website(@deputy).length == 0 %>
    <div class="tartan-element">
      <h3>
        <i class="fa fa-external-link"></i>
      </h3>
    </div>
  <% else %>
    <%= link_to "http://#{find_website(@deputy)}", target: '_blank', class: 'tartan-element bg-gray' do %>
      <h3>
        <i class="fa fa-external-link"></i>
      </h3>
    <% end %>
  <% end %>
  <!-- square bottom right -->

</div>
